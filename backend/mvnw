set -euo pipefail

BASE_DIR="$(cd "$(dirname "$0")"; pwd -P)"
WRAPPER_DIR="$BASE_DIR/.mvn/wrapper"
WRAPPER_JAR="$WRAPPER_DIR/maven-wrapper.jar"
PROPERTIES_FILE="$WRAPPER_DIR/maven-wrapper.properties"

if [ ! -f "$PROPERTIES_FILE" ]; then
  echo "Impossible de trouver $PROPERTIES_FILE" >&2
  echo "Assurez-vous d'avoir cloné tout le projet." >&2
  exit 1
fi

if [ ! -f "$WRAPPER_JAR" ]; then
  echo "Téléchargement du Maven Wrapper..."
  URL=$(grep -E '^wrapperUrl=' "$PROPERTIES_FILE" | cut -d'=' -f2-)
  mkdir -p "$WRAPPER_DIR"
  if command -v curl >/dev/null 2>&1; then
    curl -fsSL -o "$WRAPPER_JAR" "$URL"
  elif command -v wget >/dev/null 2>&1; then
    wget -q -O "$WRAPPER_JAR" "$URL"
  else
    echo "curl ou wget est requis pour télécharger le Maven Wrapper." >&2
    exit 1
  fi
fi

JAVA_EXE="${JAVA_HOME:-}"/bin/java
if [ ! -x "$JAVA_EXE" ]; then
  JAVA_EXE=$(command -v java || true)
fi

if [ ! -x "$JAVA_EXE" ]; then
  echo "Java n'est pas installé ou JAVA_HOME n'est pas défini." >&2
  exit 1
fi

cd "$BASE_DIR"

exec "$JAVA_EXE" \
  -Dmaven.multiModuleProjectDirectory="$BASE_DIR" \
  -cp "$WRAPPER_JAR" \
  org.apache.maven.wrapper.MavenWrapperMain "$@"
